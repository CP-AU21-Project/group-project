<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.ComposeTodoListFragment">


    <EditText
        android:id="@+id/etTodoListTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Title..." />

    <EditText
        android:id="@+id/etTodoListCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Category..."
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etTodoListDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Description..." />

    <Button
        android:id="@+id/btnTodoListSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit" />

    <EditText
        android:id="@+id/etTodoListItemDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="What do you want to do...?" />

    <Button
        android:id="@+id/btnAddTodoListItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Todo List Item" />

    <ListView
        android:id="@+id/lvTodoListItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>